// Cesta: backend/prisma/schema.prisma
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum UserRole {
    ADMIN
    EDITOR
    USER
}

model User {
    id                   Int       @id @default(autoincrement())
    firstName            String
    lastName             String
    email                String    @unique
    password             String
    phone                String?
    street               String?
    city                 String?
    zipCode              String?
    imageUrl             String?
    isActive             Boolean   @default(true)
    role                 UserRole  @default(USER)
    createdAt            DateTime  @default(now())
    updatedAt            DateTime  @updatedAt
    passwordChangedAt    DateTime?
    passwordResetToken   String?   @unique
    passwordResetExpires DateTime?

    tokens UserToken[]
    // contractToUsers  ContractToUser[]
    // reportUsers      ReportCarDetail[]
    // reportCarDrivers ReportCarDriver[]
    // reportDrivers    ReportDriver[]
    // reportWorkers    ReportWorker[]

    @@index([role])
}

model UserToken {
    id           Int      @id @default(autoincrement())
    token        String   @unique
    tokenExpires DateTime
    userId       Int
    user         User     @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
    @@index([token])
}
